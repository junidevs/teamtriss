{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "test-utils": [
        "src/testUtils/test-utils"
      ],
      "render-hook-utils": [
        "src/testUtils/render-hook-utils"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "./types/**/*.ts",
    "./types/**/*.tsx",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "./node_modules"
  ]
}